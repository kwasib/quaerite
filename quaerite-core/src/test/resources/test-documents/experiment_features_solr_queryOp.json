{
  "gaConfig": {
    "numThreads": 20,
    "idField": "customIdField",
    "population": 50,
    "generations": 100,
    "crossoverProbability": 0.1,
    "mutationProbability": 0.2,
    "mutationAmplitude": 0.001,
    "reproductionProbability": 0.7,
    "nFolds": 2
  },
  "scorers": [
    {
      "class": "NDCG",
      "atN": 10
    }
  ],
  "featureFactories": {
    "serverConnection": [
      {"url": "http://localhost:8983/solr/tmdb"},
      {"url": "http://localhost:8983/solr/tmdb2"}
    ],
    "customHandlers": {
      "custom1": {},
      "custom2": {}
    },
    "query": {
      "edismax": {
        "qf": {
          "fields": [
            "title",
            "overview",
            "people",
            "content"
          ],
          "defaultWeights": [
            "0.0",
            "1.0",
            "7.0"
          ],
          "minSetSize": 1,
          "maxSetSize": 4
        },
        "q.op" : {
          "operators": ["and", "or"],
          "mmFloats": [-0.80, -0.10, 0.1, 0.5, 0.8],
          "mmInts": [-3,-2,-1,1,2,3,4]
        }
      }
    }
  }
}